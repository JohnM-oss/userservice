{
  "name": "johnm-oss/userservice",
  "description": "Simple user service",
  "minimum-stability": "stable",
  "license": "proprietary",
  "autoload": {
    "psr-4": {
      "Johnm\\Userservice\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Johnm\\Userservice\\Tests\\": "tests/"
    }
  },
  "require": {
    "php": "^8.4",
    "guzzlehttp/guzzle": "^7.9",
    "ext-json": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.2",
    "phpstan/phpstan": "^2.1",
    "phpstan/phpstan-phpunit": "^2.0"
  },
  "scripts": {
    "test": "phpunit",
    "stan": "phpstan analyse",
    "stan:max": "phpstan analyse --level=max",
    "stan:gen-baseline": "phpstan analyse --generate-baseline",
    "stan:clear": "rm -rf var/phpstan || rmdir /S /Q var\\phpstan"
  }
}
